<div class="container mt-5 d-flex justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center mb-4">Create Your Account</h3>
          <%= form_with model: @user, html: { class: 'createAccountForm' } do |form| %>

            <% if @user.errors.any? %>
              <div class="alert alert-danger text-center">
                <% @user.errors.full_messages.each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :username, class: 'form-label' %><br>
              <%= form.text_field :username, class: 'form-control', placeholder: 'Create a username' %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: 'form-label' %><br>
              <%= form.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
            </div>

            <div class="mb-3">
              <%= form.label :password, class: 'form-label' %><br>
              <%= form.password_field :password, class: 'form-control', placeholder: 'Create your password' %>
            </div>

            <div class="mb-3">
              <%= form.label :password_confirmation, class: 'form-label' %><br>
              <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
            </div>

            <div class="d-grid">
              <%= form.submit 'Create Account', class:'btn btn-primary' %>
            </div>

          <% end %>
      </div>
    </div>
  </div>
</div>