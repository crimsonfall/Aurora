<div class="container mt-5 pt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3 class="text-white text-center mb-4">Edit Profile</h3>
      <%= form_with(model: @user, local: true) do |form| %>
        <div class="mb-3 text-white text-center">
          <% if @user.profile_picture.attached? %>
            <%= image_tag(@user.profile_picture, class: 'profile-picture-show mb-4')%>
          <% else %>
            <%= image_tag('default_profile_picture.png', class: 'profile-picture-show mb-4') %>
          <%end%>
          <%= form.file_field :profile_picture, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :username, class: "form-label text-white" %>
          <%= form.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :bio, class: "form-label text-white" %>
          <%= form.text_area :bio, class: "form-control", rows: 3 %>
        </div>
        <div class="mb-3">
          <%= form.label :email, class: "form-label text-white" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :password, class: "form-label text-white" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :password_confirmation, class: "form-label text-white" %>
          <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="d-grid">
          <%= form.submit "Save Changes", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>