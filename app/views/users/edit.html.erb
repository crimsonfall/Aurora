<div class="text-white">
  <h1>Edit Profile</h1>
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="field">
      <%= form.label :bio %>
      <%= form.text_area :bio %>  
    </div>
    <div class="field">
      <%= form.label :profile_picture %>
      <%= form.file_field :profile_picture %>
    </div>
    <div class="actions">
      <%= form.submit "Save Changes" %>
    </div>
  <% end %>
</div>