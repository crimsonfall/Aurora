<div class="container mt-4 d-flex justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-4">Create a Post</h5>
        <%= form_with model: @post, html: { id: 'postForm' } do |form| %>

          <% if @post.errors.any? %>
            <div class="alert alert-danger text-center">
              <% @post.errors.full_messages.each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: 'form-label' %><br>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :image, class: "form-label" %>
            <%= form.file_field :image, class: "form-control", id: "postImage", accept: ".png, .jpg, .jpeg" %>
          </div>

          <div class="mb-3">
            <%= form.label :license, class: "form-label" %>
            <%= form.select :license, Post::LICENSES, prompt: "Select A License", selected: "Copyright", class: "form-select" %>
          </div>

          <div id="postTextContainer" class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, maxlength: 140, id: "postText", class: "form-control", rows: "3" %>
          </div>

          <div class="mb-3">
            <img id="imagePreview" src="#" alt="Image Preview" style="display: none; max-width: 100%; height: auto;" />
          </div>

          <div>
            <%= form.submit class: "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>